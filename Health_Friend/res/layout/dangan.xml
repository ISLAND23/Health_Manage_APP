<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ffff" >
    
    <TextView
		android:id="@+id/base_tx"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="个人资料"
		android:textSize="25sp"
		android:gravity="center"
		android:layout_below="@+id/im1"
		/>
    <ImageView 
        android:id="@+id/im1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/touxiang"
	    android:layout_marginTop="10dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/base_1"
        android:layout_below="@+id/base_tx"
        android:layout_marginTop="5dp"
        android:background="@color/whitesmoke"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 姓名： "
            android:id="@+id/tx_name"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="#ff8c00"
            android:textColorHighlight="#ffff00" />
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/base_2"
        android:layout_below="@id/base_1"
	    android:layout_marginTop="2dp"
	    android:background="@color/whitesmoke"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 性别： "
            android:id="@+id/tx_sex"
            android:textSize="25sp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_sex"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="#ff8c00"
            android:textColorHighlight="#ffff00"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/base_3"
        android:layout_below="@id/base_2"
        android:layout_marginTop="2dp"
        android:background="@color/whitesmoke"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 身高： "
            android:id="@+id/tx_high"
            android:textSize="25sp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_high"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="#ff8c00"
            android:textColorHighlight="#ffff00"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/base_4"
        android:layout_below="@id/base_3"
        android:layout_marginTop="2dp"
        android:background="@color/whitesmoke"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 体重： "
            android:id="@+id/tx_weight"
            android:textSize="25sp"/>
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_weight"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="#ff8c00"
            android:textColorHighlight="#ffff00"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="10dp"
		android:layout_weight="1"
		android:id="@+id/base_sp"
		android:layout_below="@id/base_4"
		android:background="@color/whitesmoke"
        >
        <TextView 
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="#0A0A0A"
			android:textSize="21sp" 
			android:text="健康史:"
            />
            <Spinner 
                android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:id="@+id/SP"
                />
        </LinearLayout>
        
    <Button 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="保存"
	    android:textColor="@color/moccasin"
	    android:textSize="25sp"
	    android:id="@+id/base_id"
	    android:layout_below="@id/base_sp"
	    android:background="@color/lightskyblue"
	    android:layout_marginTop="15dp"
        />

</RelativeLayout>
